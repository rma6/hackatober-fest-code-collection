#include <iostream.h>

void main() {
 int num;
 
 cout << "Enter a number:";
 cin >> num;
 
 if (num > 0) {
  
  cout << "The  number you have entered positive number";
 
 } else if (num < 0) {
  
  cout << "The number you have entered negative number";
  
 } else {
  
  cout << "You have entered zero";
 }
 

}
